<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh sửa khóa học</title>
    <link rel="stylesheet" href="../css/editCourse.css">
</head>
<body>
    <div class="container">
        <% if(element === 'course'){ %>
            <% if(locals.item){ %>
        <h1>Chỉnh sửa khóa học</h1>
        <form action="/submitCourse" method="POST">
            <div class="form-group">
                <label for="id">Course ID</label>
                <input type="text" id="id" name="id" value="<%= item.course_id %>" required readonly>
            </div>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%= item.title %>" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="5"  required><%= item.description %></textarea>
            </div>
            <div class="form-group">
                <label for="cost">Cost</label>
                <input type="number" id="cost" name="cost" value=<%= item.cost %> required>
            </div>
            <div class="form-group">
                <label for="teacher_id">Teacher ID</label>
                <input type="text" id="teacher_id" name="teacher_id" value=<%= item.teacher_id %> required readonly>
            </div>
            <button type="submit">Submit</button>
            </form>
            <% }else{ %>
                <h1>Tạo khóa học</h1>
                <form action="/createCourse/<%= locals.teacher_id %>" method="POST">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea id="description" name="description" rows="5"  required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="cost">Cost</label>
                        <input type="number" id="cost" name="cost"  required>
                    </div>
                    <button type="submit">Submit</button>
                </form>
            <% } %>
        <% }else if(element === 'teacher'){ %>
            <h1>Chỉnh sửa giáo viên</h1>
            <form action="/submitTeacher" method="POST">
            <div class="form-group">
                <label for="id">Teacher ID</label>
                <input type="text" id="id" name="id" value="<%= item.teacher_id %>" required readonly>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="title" name="name" value="<%= item.name %>" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="title" name="email" value="<%= item.email %>" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" id="title" name="phone" value="<%= item.phone %>" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="title" name="address" value="<%= item.address %>" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="5"  required><%= item.description_teacher%></textarea>
            </div>
            <div class="form-group">
                <label for="teacher_id">Year Of Experience</label>
                <input type="text" id="experience" name="experience" value=<%= item.experience %> required >
            </div>
            <button type="submit">Submit</button>
            </form>
        <% }else { %>
            <h1>Chỉnh sửa học sinh</h1>
            <form action="/submitStudent?course_id=<%= locals.course_id %>" method="POST">
            <div class="form-group">
                <label for="id">Student ID</label>
                <input type="text" id="id" name="id" value="<%= item.student_id %>" required readonly>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="title" name="name" value="<%= item.name %>" required>
            </div>
            <% if(locals.role === 'admin'){ %>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="title" name="email" value="<%= item.email %>" required>
            </div>
            <% } %>
            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" id="title" name="phone" value="<%= item.phone %>" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="title" name="address" value="<%= item.address %>" required>
            </div>
            <div class="form-group">
                <label for="address">Gender</label>
                <input type="text" id="title" name="gender" value="<%= item.gender %>" required>
            </div>
            <button type="submit">Submit</button>
        </form>
        <% } %>
    </div>
</body>
</html>
